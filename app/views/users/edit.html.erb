<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

    <h3>Edit Profile</h3>

   <% if @user.errors.any? %>
      <h4>We have some errors here !</h4>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
      <hr>
    <% end %>

    <%= form_for :user do |f| %>

      <div class="form-group">
        <%= f.label :name, "Name" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :intro, "自我介紹" %>
        <%= f.text_field :intro, class: "form-control" %>
      </div>



      <div class="form-group">
        <%= f.submit "Update", class: "btn btn-primary" %>
        <%= link_to "Cancel", user_path(@user),  class: "btn btn-default" %>
      </div>
    <% end %>
    </div>

  </div>
</div>


  


